# Docker Environment
COMPOSE_PROJECT_NAME=best-time

# Backend (Laravel)
APP_NAME="Best Time"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=besttime
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Redis
REDIS_CLIENT=predis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Cache & Session
CACHE_DRIVER=redis
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost

# Frontend (Nuxt)
NUXT_API_URL=http://localhost/api
NUXT_PUBLIC_API_URL=http://localhost/api

# Mail Configuration (MailHog pour d√©veloppement)
MAIL_MAILER=smtp
